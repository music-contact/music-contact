{{> header}}
<div class="register-body">  
  {{#if errors}}
    <div class="alert alert-danger">
      review form data
    </div>
  {{/if}}

  <form action="/register" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input name="name" value="{{newArtist.name}}" type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="name" />
      {{#if errors.name}}
        <div class="invalid-feedback">
          {{errors.name}}
        </div>
      {{/if}}
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input name="email" value="{{newArtist.email}}" type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" id="email" />
       {{#if errors.email}}
        <div class="invalid-feedback">
          {{errors.email}}
        </div>
      {{/if}}
    </div>
    <div class="mb-3">
      <label for="password">Password</label>
      <input name="password" value="{{newArtist.password}}" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="password" />
      {{#if errors.password}}
        <div class="invalid-feedback">
          {{errors.password}}
        </div>
      {{/if}}
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
  <a href="/login">Log in</a>
</div>